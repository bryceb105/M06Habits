@{
    ViewData["Title"] = "My Tasks";
}
@model List<ApplicationResponse>


<div>
    <div>
        <h4 class="text-center">My Task Matrix</h4>
    </div>

    <div class="row border-left border-right border-top">
        <div class="col-2 border"></div>
        <div class="col border font-weight-bold">Urgent</div>
        <div class="col border font-weight-bold">Not Urgent</div>
    </div>

    <div class="row border-left border-right border-top">
        <div class="col-2 border font-weight-bold">Important</div>
        <div class="col border">
            Quadrant 1
            @foreach (var x in Model)
            {
                @if (x.completed == false)
                {
                    @if (x.quadrant == 1)
                    {
                        <ul>
                            <li>@x.task</li>
                            <li>@x.due_date</li>
                            <li>@x.quadrant</li>
                            <li>@x.Category.CategoryName</li>
                            <tli>@x.completed</tli>


                            <li><a asp-controller="Home" asp-action="Edit" asp-route-id="@x.DataId" class="btn btn-outline-primary text-center" style="width: 100px">Edit</a></li>
                            <li><a asp-controller="Home" asp-action="Delete" asp-route-id="@x.DataId" class="btn btn-outline-primary text-center" style="width: 100px">Delete</a></li>
                        </ul>
                    }
                }
            }
        </div>
        <div class="col border">Dos</div>
    </div>

    <div class="row border">
        <div class="col-2 border font-weight-bold">Not Important</div>
        <div class="col border-right border-bottom border-left">Tres</div>
        <div class="col border-right border-bottom border-left">Cuatro</div>
    </div>
</div>