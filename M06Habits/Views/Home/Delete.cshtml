@{
    ViewData["Title"] = "Delete Task";
}
@model ApplicationResponse
<h2 class="display-4 text-center">Confirm Deletion</h2>
<br />

<h3 class=" text-center">Are you sure you want to delete <b> @Model.task</b>?</h3>
<br />

<form method="post" asp-action="Delete" class="form text-center">

    <a asp-controller="Home" asp-action="index" class="btn btn-outline-primary">Cancel</a>
    <button type="submit" class="btn btn-outline-primary">Delete</button>

    <input type="hidden" asp-for="DataId" />
</form>